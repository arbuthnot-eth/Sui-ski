{
  "name": "sui-grpc-backend",
  "version": "1.0.0",
  "description": "High-performance gRPC backend proxy for Sui RPC",
  "type": "module",
  "scripts": {
    "start": "bun run src/server.ts",
    "dev": "bun run --watch src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target node",
    "docker:build": "docker build -t sui-grpc-backend .",
    "docker:run": "docker run -p 8080:8080 -e SUI_RPC_URL=https://fullnode.mainnet.sui.io:443 sui-grpc-backend"
  },
  "dependencies": {
    "@mysten/sui": "^1.17.0",
    "hono": "^4.6.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
